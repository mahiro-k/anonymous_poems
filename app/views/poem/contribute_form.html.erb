<div class="main">
  <div class="container">
    <h1 class="page-title">寄稿</h1>
    <div class="container">
      <div class="contribute-poems">
        <h2><%= @poem.title %><h2>
        <div class="contribute-poems-discription">
          <%= simple_format(@poem.discription) %>
        </div>
      </div>
      <%= form_tag("/poems/#{@poem.id}/contribute", :class => "contribute-form") do %>
        <div class="contribute-form-content">
          <h2>詩</h2>
          <textarea name="content" placeholder="600文字以内で入力してください。"><%= @content %></textarea>
        </div>
        <div class="contribute-form-author">
          <h2>著者名</h2>
          <input type="text" name="author" placeholder="匿名可能" value="<%= @author %>">
        </div>
        <div class="contribute-form-submit">
          <input type="submit" value="寄稿" class="btn">
        </div>
      <% end %>
    </div>
  </div>
</div>
