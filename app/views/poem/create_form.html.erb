<div class="main">
  <div class="container">
    <h1 class="page-title">詩集作成</h1>
    <%= form_tag("/poems/create", :class => "create-form") do %>
      <div class="container">
        <div  class="create-form-title">
          <h2>詩集名</h2>
          <input type="text" name="title" placeholder="入力してください。" value="<%= @poem.title %>">
        </div>
        <div class="create-form-discription">
          <h2>説明</h2>
          <textarea name="discription" placeholder="600文字以内で入力してください。" ><%= @poem.discription %></textarea>
        </div>
        <div class="create-form-submit">
          <input type="submit" value="作成" class="btn">
        </div>
      </div>
    <% end %>
  </div>
</div>
